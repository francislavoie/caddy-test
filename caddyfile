{
	admin off
	auto_https disable_redirects
	http_port 1314
}

http://localhost:1314 {
	file_server
	root * {env.PWD}/www

	# --- Method 1
	@post {
		file /blog/{path}index.html /blog/{path}/index.html
		not file {path} {path}/
		path_regexp post ^/([^/]+)/?$
	}

	# --- Method 2
	#@post {
	#	file /blog/{path} /blog/{path}/
	#	not file {path} {path}/
	#	path_regexp post ^/([^/]+)/?$
	#}

	redir @post /blog/{re.post.1}/
	templates
}